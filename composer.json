{
    "name": "dlnsk/h-rbac",
    "description": "Based on native Laravel's gates and policies. Hierarchical RBAC with callbacks.",
    "license": "MIT",
    "keywords": ["laravel", "rbac", "hierarchical", "ability", "role", "permission", "gate", "policy"],
    "homepage": "https://github.com/dlnsk/h-rbac",
    "authors": [
        {
            "name": "Dmitry Pupinin",
            "email": "dlnsk@mail.ru"
        }
    ],
    "require": {
        "facade/ignition": "^1.16.15",
        "laravel/framework": "~5.7|>=6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "orchestra/testbench": "^4.5"
    },
    "autoload": {
       "psr-4": {
         "Dlnsk\\HierarchicalRBAC\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dlnsk\\HierarchicalRBAC\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dlnsk\\HierarchicalRBAC\\HRBACServiceProvider"
            ]
        }
    }
}
